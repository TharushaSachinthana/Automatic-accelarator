{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "prefer-const": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "curly": "error",
        "no-throw-literal": "error",
        "prefer-template": "warn",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 2
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "indent": [
            "warn",
            2
        ],
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "arrow-parens": [
            "warn",
            "always"
        ]
    }
}