            "title": "üìä Request Rate (req/sec)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "sum(rate(taskmanager_http_requests_total[5m])) by (method)",
                    "legendFormat": "{{method}}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "drawStyle": "line",
                        "lineWidth": 2,
                        "fillOpacity": 20,
